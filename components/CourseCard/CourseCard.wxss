.yx-course-card {
  box-sizing: border-box;
  display: flex;
  padding: 40rpx 0;
}
.yx-course-card:not(:last-child) {
  border-bottom: 1rpx solid #eeeeee;
}
.yx-course-card .image {
  width: 180rpx;
  height: 240rpx;
  border-radius: 0 10rpx 10rpx 0;
  background-color: #eee;
  margin-right: 45rpx;
}
.yx-course-card .image .img {
  display: block;
  width: 100%;
  height: 100%;
}
.yx-course-card .description {
  width: 100%;
  height: 240rpx;
  position: relative;
}
.yx-course-card .description .p {
  font-size: 22rpx;
  color: #999999;
}
.yx-course-card .description .title {
  width: 456rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  margin-top: -5rpx;
}
.yx-course-card .description .tips-box {
  height: 40rpx;
  margin-top: 15rpx;
  margin-bottom: 19rpx;
}
.yx-course-card .description .tips-box .tips {
  display: inline-block;
  border-radius: 4rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  font-size: 22rpx;
}
.yx-course-card .description .tips-box .tips:last-child {
  margin-right: 0;
}
.yx-course-card .description .money {
  margin-top: 10rpx;
}
.yx-course-card .description .money .money-price {
  font-size: 24rpx;
  color: #ff4254;
  margin-right: 22rpx;
  font-weight: bold;
}
.yx-course-card .description .money .money-price .num {
  font-size: 34rpx;
  color: #ff4254;
}
.yx-course-card .description .money .money-del-price {
  color: #cccccc;
  font-weight: bold;
  text-decoration: line-through;
}
.yx-course-card .description .quota {
  color: #FF4254;
  position: absolute;
  left: 0;
  bottom: -2rpx;
}
.yx-course-card .description .button {
  border-radius: 8rpx;
  width: 156rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: -2rpx;
}
