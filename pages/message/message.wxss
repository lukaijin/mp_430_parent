.message_item {
  width: 100%;
  padding: 12rpx 30rpx;
  box-sizing: border-box;
}
.message_item .message_list {
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 48rpx;
}
.message_item .message_list .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
}
.message_item .message_list .header .header_item {
  display: flex;
  align-items: center;
}
.message_item .message_list .header .header_item .header_title label {
  font-weight: bold;
  color: #666666;
  font-size: 28rpx;
}
.message_item .message_list .header .header_item .header_title .name {
  color: #40BF6A;
}
.message_item .message_list .header .header_item .user_img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 1px solid #eee;
  margin-right: 18rpx;
}
.message_item .message_list .header .time {
  color: #999;
  font-size: 24rpx;
}
.message_item .message_list .contents {
  margin-bottom: 26rpx;
  font-size: 28rpx;
}
.message_item .message_list .content {
  width: 100%;
  padding: 27rpx 36rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #fbfbfb;
  margin-bottom: 48rpx;
  color: #666666;
}
.message_item .message_list .content .report {
  display: flex;
}
.message_item .message_list .content .report .left {
  width: 120rpx;
  height: 160rpx;
  flex: 0 0 120rpx;
  margin-right: 22rpx;
  border: 1px solid #eee;
}
.message_item .message_list .content .report .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.message_item .message_list .content .report .right .title {
  font-size: 30rpx;
  font-weight: bold;
}
.message_item .message_list .content .report .right .dec {
  font-size: 26rpx;
  color: #999999;
}
.message_item .message_list .content .report .right button {
  font-size: 24rpx;
  padding: 0;
  width: 160rpx;
  height: 56rpx;
  background: #40bf6a;
  border-radius: 8rpx;
  line-height: 56rpx;
  text-align: center;
  color: white;
  margin: 0;
}
.message_item .message_list .content .report .right button::after {
  border: none;
}
.message_item .nothing {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  margin-top: 361rpx;
}
.message_item .nothing image {
  width: 179rpx;
  height: 133rpx;
}
.message_item .nothing .p {
  font-size: 32rpx;
  color: #666666;
  margin-top: 56rpx;
}
