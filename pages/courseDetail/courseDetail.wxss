.course-detail {
  position: relative;
  min-height: 100%;
  z-index: 2;
}
/* 按钮状态 */
.course-btn {
  width: 100%;
  height: 107rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  color: #ffffff;
  border-top: 1px solid #eeeeee;
  padding: 0 30rpx;
  background-color: #ffffff;
  z-index: 2;
}
.course-btn button {
  margin: 0;
  padding: 0;
  background-color: transparent;
}
.course-btn button::after {
  border: none;
}
.course-btn .kefu-btn {
  margin-right: 40rpx;
  flex: 1;
}
.course-btn .kefu-btn .icon-customerservice {
  color: #333333;
  font-size: 42rpx;
  margin-right: 10rpx;
}
.course-btn .share-btn {
  flex: 1;
}
.course-btn .share-btn .icon-send {
  color: #333333;
  font-size: 42rpx;
  margin-right: 10rpx;
}
.course-btn .sign-up-btn {
  text-align: center;
  position: relative;
  width: 390rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin-left: 36rpx;
}
.course-btn .sign-up-btn .sign-up-picker {
  width: 100%;
  position: absolute;
  height: 80rpx;
  left: 0;
  top: 0;
}
.course-btn .sign-up-btn .sign-up-picker .picker-text {
  text-align: center;
  color: transparent;
  font-size: 34rpx;
}
.course-btn .sign-up-btn text {
  color: #ffffff;
  font-size: 34rpx;
}
