.canvas-box {
  width: 750rpx;
  height: 1206rpx;
  position: absolute;
  z-index: 0;
  left: -100000rpx;
}
.poster-container {
  width: 100%;
  min-height: 100%;
}
.poster-container .poster-bg {
  width: 100%;
  min-height: 100%;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  position: absolute;
  left: 0;
}
.choose-img {
  width: 200rpx;
  height: 200rpx;
  margin: 217rpx auto 113rpx;
  background-color: rgba(64, 191, 106, 0.7);
  border-radius: 50%;
  text-align: center;
  color: #ffffff;
  font-size: 22rpx;
}
.choose-img.hide-upload {
  visibility: hidden;
}
.choose-img .icon-picture {
  padding-top: 35rpx;
  font-size: 80rpx;
  color: #ffffff;
}
/* 大海的秘密 */
.dahai-mimi {
  padding: 0 60rpx;
  margin-bottom: 29rpx;
}
.dahai-mimi .dahai-mimi-in {
  background-color: #ffffff;
  padding: 35rpx 49rpx 49rpx 65rpx;
  border-radius: 20rpx;
}
.dahai-mimi .title-school {
  display: flex;
  justify-content: space-between;
  margin-bottom: 45rpx;
}
.dahai-mimi .title-school .h2 {
  color: #000000;
  font-weight: bold;
  font-size: 34rpx;
}
.dahai-mimi .title-school .school {
  display: flex;
  align-items: center;
}
.dahai-mimi .title-school .icon-coordinates_fill {
  color: #999999;
  font-size: 36rpx;
}
.dahai-mimi .p-text {
  padding-bottom: 25rpx;
}
/* 宝贝 */
.baby {
  padding: 0 60rpx;
  margin-bottom: 43rpx;
}
.baby .baby-in {
  background-color: #ffffff;
  padding: 28rpx 62rpx 30rpx 52rpx;
  border-radius: 20rpx;
}
.baby .baby-in-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.baby .baby-in-l {
  font-size: 26rpx;
  font-weight: bold;
  position: relative;
}
.baby .baby-in-l .p-text {
  padding-bottom: 10rpx;
}
.baby .baby-in-l .arrow-tip {
  width: 74rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #faa343;
  position: absolute;
  right: 0;
  bottom: 0;
}
.baby .baby-in-l .arrow-tip .icon-more1 {
  font-size: 32rpx;
  color: #ffffff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.baby .baby-in-r {
  width: 112rpx;
  height: 112rpx;
}
.baby .baby-in-r image {
  width: 112rpx;
  height: 112rpx;
}
.poster-btn {
  display: block;
  width: 300rpx;
  height: 96rpx;
  line-height: 96rpx;
  margin: 0 auto;
  text-align: center;
  color: #ffffff;
  background-color: #40BF6A;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 8rpx;
}
/* 裁剪 */
.cropper {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 1030;
  background: #000;
}
.cropper-buttons {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
}
.cropper-buttons {
  background: #fff;
  color: #fff;
}
.cropper-buttons .upload,
.cropper-buttons .getCropperImage {
  width: 50%;
  text-align: center;
}
.close {
  position: absolute;
  top: 10px;
  right: 20px;
  font-size: 18px;
  color: #fff;
  z-index: 1040;
}
