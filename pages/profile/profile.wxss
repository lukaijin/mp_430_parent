.profile-box {
  min-height: 100%;
  background-color: #f3f3f3;
}
.profile-ul {
  background-color: #ffffff;
  padding: 0 30rpx;
}
.profile-ul .li {
  padding: 30rpx 0rpx;
  position: relative;
  color: #666666;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.profile-ul .li:first-child {
  padding: 32rpx 0rpx 20rpx;
}
.profile-ul .li:not(:last-child) {
  border-bottom: 1rpx solid #eeeeee;
}
.profile-ul .headImg {
  text-align: right;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  box-sizing: border-box;
}
.profile-ul .label-title {
  margin-right: 50rpx;
}
.profile-ul .profile-input {
  flex: 2;
  text-align: right;
  font-size: 30rpx;
}
.profile-ul .profile-picker {
  height: 100%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.profile-ul .profile-school {
  flex: 2;
  text-align: right;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.profile-ul .profile-school .school-width {
  display: inline-block;
  width: 300rpx;
}
.profile-ul .profile-school .untie-btn {
  display: inline-block;
  width: 100rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 4rpx;
  text-align: center;
  background: #FF9A49;
  color: #ffffff;
  margin-left: 34rpx;
}
.save-btn-view {
  padding: 0 30rpx;
}
.save-btn {
  margin-top: 50rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 96rpx;
  box-sizing: border-box;
  background-color: #40BF6A;
  font-size: 34rpx;
  color: #ffffff;
}
.cropper {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 1030;
  background: #000;
}
.cropper-buttons {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
}
.cropper-buttons {
  background: #fff;
  color: #fff;
}
.cropper-buttons .upload,
.cropper-buttons .getCropperImage {
  width: 50%;
  text-align: center;
}
.close {
  position: absolute;
  top: 10px;
  right: 20px;
  font-size: 18px;
  color: #fff;
  z-index: 1040;
}
